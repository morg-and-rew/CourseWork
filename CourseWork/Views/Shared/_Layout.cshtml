<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewBag.Title ?? "Магазин игр")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Games" && ViewContext.RouteData.Values["Action"]?.ToString() == "List" && string.IsNullOrEmpty(ViewContext.RouteData.Values["category"]?.ToString()) ? "active" : "")" 
                               asp-controller="Games" asp-action="List">Игры</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Games" && ViewContext.RouteData.Values["Action"]?.ToString() == "List" && ViewContext.RouteData.Values["category"]?.ToString() == "ActionGame" ? "active" : "")" 
                               asp-controller="Games" asp-action="List" asp-route-category="ActionGame">Экшен</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Games" && ViewContext.RouteData.Values["Action"]?.ToString() == "List" && ViewContext.RouteData.Values["category"]?.ToString() == "Role-playingGames" ? "active" : "")" 
                               asp-controller="Games" asp-action="List" asp-route-category="Role-playingGames">Ролевые игры</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ShopGame" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                               asp-controller="ShopGame" asp-action="Index">Корзина</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        @RenderBody()
    </div>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>